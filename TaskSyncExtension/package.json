{
  "name": "tasksync-chat",
  "displayName": "TaskSync",
  "description": "A VS Code extension for tasksync protocol and file reference support",
  "version": "1.0.5",
  "icon": "icon.png",
  "publisher": "4regab",
  "repository": {
    "type": "git",
    "url": "https://github.com/4regab/TaskSync.git"
  },
  "bugs": {
    "url": "https://github.com/4regab/TaskSync/issues"
  },
  "homepage": "https://github.com/4regab/TaskSync/tree/main/TaskSyncExtension#readme",
  "keywords": [
    "task management",
    "ai integration",
    "copilot",
    "chat interface",
    "productivity"
  ],
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:tasksyncChat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tasksync.openChat",
        "title": "Open TaskSync Chat",
        "icon": "$(comment-discussion)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tasksync",
          "title": "TaskSync",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "tasksync": [
        {
          "id": "tasksyncChat",
          "name": "TaskSync Chat",
          "type": "webview",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "ws": "^8.18.3"
  }
}
